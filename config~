# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4
set $alt Mod1

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel
default_floating_border none

# Hide borders
hide_edge_borders smart

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Noto Sans, Awesome 13

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# Avoid screen overflow
floating_maximum_size 1366x768

# Mouse doesn't mess with focus
focus_follows_mouse no

# start a terminal
bindsym $mod+Return exec xfce4-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start program launcher
bindsym $mod+d exec rofi -show drun -show-icons #-matching fuzzy

# launch categorized menu
bindsym $mod+z exec --no-startup-id rofi -show run

# launch calc
bindsym $mod+c exec --no-startup-id "rofi -show calc -modi calc -no-show-match -no-sort"

